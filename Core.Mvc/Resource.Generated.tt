<#+
    bool AlwaysKeepTemplateDirty = true;
    static DTE Dte;
    static Project Project;
    static string AppRoot;
    static string RootNamespace;
	static Dictionary<string, string> cache = new Dictionary<string, string>();

  void CreateNamespace(string dir)
        {
			string classes = "";
            string wwwrootDir = AppRoot+"wwwroot";
            string[] a = Directory.GetFiles(dir);
            DirectoryInfo DirectoryInfo = new DirectoryInfo(dir);
            string namespaceEnd = DirectoryInfo.Parent.FullName.Replace(wwwrootDir, "").Replace(@"\", ".");
          // todo
		  if(namespaceEnd==".js"){
		   namespaceEnd =".Js";
		   }
		    string @namespace =RootNamespace + (namespaceEnd == "." ? "" : namespaceEnd);
            string className = ToCamelCase(DirectoryInfo.Name);
	    	if(className=="Js"){
		    className ="Javascript";
		    }	
            classes +=($"    public class {className}");
			classes += Environment.NewLine;
            classes +=("    {");
            foreach (var file in a.Where(o => o.EndsWith(".js") && !o.EndsWith("min.js")))
            {
                FileInfo FileInfo = new FileInfo(file);
                string value = FileInfo.FullName.Replace(wwwrootDir, "");
				classes += Environment.NewLine;
				classes +=($"        public const string {ToCamelCaseComplex(FileInfo.Name)} = \"{value.Replace(@"\", "/")}\";");
			}
			classes += Environment.NewLine;
            classes +=("    }");
			var cachedClasses = cache.FirstOrDefault(o => o.Key == @namespace).Value;
            if (cachedClasses != null)
            {
				classes = Environment.NewLine + classes;
                classes = cache.First(o => o.Key == @namespace).Value + Environment.NewLine+ classes;
                cache.Remove(@namespace);
                cache.Add(@namespace, classes);
            }
            else
            {
                cache.Add(@namespace, classes);
            }
        }
    void CreateNamespace2(string dir)
        {
			string classes = "";
            string wwwrootDir = AppRoot+"wwwroot";
            string[] a = Directory.GetFiles(dir);
            DirectoryInfo DirectoryInfo = new DirectoryInfo(dir);
            string namespaceEnd = DirectoryInfo.Parent.FullName.Replace(wwwrootDir, "").Replace(@"\", ".");
          // todo
		  if(namespaceEnd==".css"){
		   namespaceEnd =".Css";
		   }
		    string @namespace =RootNamespace + (namespaceEnd == "." ? "" : namespaceEnd);
            string className = ToCamelCase(DirectoryInfo.Name);
	    	if(className=="Css"){
		    className ="Css";
		    }	
			var cachedClasses = cache.FirstOrDefault(o => o.Key == @namespace).Value;

            classes +=($"    public class {className}");
			classes += Environment.NewLine;
            classes +=("    {");
            foreach (var file in a.Where(o => o.EndsWith(".css") && !o.EndsWith("min.css")))
            {
                FileInfo FileInfo = new FileInfo(file);
                string value = FileInfo.FullName.Replace(wwwrootDir, "");
				classes += Environment.NewLine;
				classes +=($"        public const string {ToCamelCaseComplex2(FileInfo.Name)} = \"{value.Replace(@"\", "/")}\";");
			}
			classes += Environment.NewLine;
            classes +=("    }");
            if (cachedClasses != null)
            {
				classes = Environment.NewLine + classes;
                classes = cache.First(o => o.Key == @namespace).Value + Environment.NewLine+ classes;
                cache.Remove(@namespace);
                cache.Add(@namespace, classes);
